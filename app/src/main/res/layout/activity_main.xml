<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/fuji" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="JAPAN"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="30dp"
         />

    <TextView
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="It is Tokyo's oldest temple, and one of its most significant. Formerly associated with the Tendai sect of Buddhism."
        android:layout_marginTop="549dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:fontFamily=""
        />
        
        <Button
            android:id="@+id/btnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="See Details"
            android:backgroundTint="#263AF4"

            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>